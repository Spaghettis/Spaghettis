set ::tk::mac::CGAntialiasLimit 0
set ::tk::mac::antialiasedtext  1

# ------------------------------------------------------------------------------------------------------------
# ------------------------------------------------------------------------------------------------------------

proc ::tk::mac::OpenDocument {args} {

    if {$::var(isInitialized)} {
        
        foreach filename $args { ::ui_file::openFile $filename }
    
    } else {
    
        foreach filename $args { lappend ::var(filesOpenPended) $filename }
    }
}

proc ::tk::mac::Quit {args} {

    ::ui_interface::pdsend "pd _quit"
}

